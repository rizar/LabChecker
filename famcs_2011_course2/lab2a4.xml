        <rem_color color = "0, 220, 249"/>
        <add_color color = "%C4%"/>
        <add_color color = "%C5%"/>
        <add_color color = "%C6%"/>
        <add_color color = "%C6-%"/>
        <add_color color = "%C7%"/>
        <add_color color = "%C8%"/>
